<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fondo_inicio"
        android:layout_width="464dp"
        android:layout_height="784dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/background_azul" />

    <ImageView
        android:id="@+id/logo_inicio"
        android:layout_width="184dp"
        android:layout_height="183dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_kairen" />

    <TextView
        android:id="@+id/buscandog_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableTint="#225C6E"
        android:fontFamily="cursive"
        android:foregroundTint="#CA3838"
        android:text="Buscandog"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#0198DB"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_inicio" />

    <TextView
        android:id="@+id/by_jairen_inicio"
        android:layout_width="238dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:drawableTint="#225C6E"
        android:fontFamily="cursive"
        android:foregroundTint="#CA3838"
        android:text="by Kairen"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#0198DB"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscandog_inicio" />

    <Button
        android:id="@+id/button_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FEFEFE"
        android:text="Iniciar sesion"
        android:textColor="#0297DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/by_jairen_inicio"
        android:onClick="avanzarLogin"/>

    <TextView
        android:id="@+id/texto1_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Â¿No tienes una cuenta?"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_inicio" />

    <TextView
        android:id="@+id/texto2_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:clickable="true"
        android:text="Registrarse"
        android:textColor="#0099DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto1_inicio"
        android:onClick="avanzarRegistro"/>

    <TextView
        android:id="@+id/texto3_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="34dp"
        android:text="Sobre Kairen"
        android:textColor="#0099DA"
        app:layout_constraintEnd_toStartOf="@+id/texto4_inicio"
        app:layout_constraintTop_toBottomOf="@+id/linea_inicio" />

    <TextView
        android:id="@+id/texto4_inicio"
        android:layout_width="70dp"
        android:layout_height="46dp"
        android:layout_marginTop="21dp"
        android:text="Politica de privacidad"
        android:textAlignment="center"
        android:textColor="#0099DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linea_inicio" />

    <TextView
        android:id="@+id/texto5_inicio"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="21dp"
        android:text="Terminos y conidiones"
        android:textAlignment="center"
        android:textColor="#0099DA"
        app:layout_constraintStart_toEndOf="@+id/texto4_inicio"
        app:layout_constraintTop_toBottomOf="@+id/linea_inicio" />

    <ImageView
        android:id="@+id/linea_inicio"
        android:layout_width="297dp"
        android:layout_height="0dp"
        android:layout_marginTop="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto2_inicio"
        app:srcCompat="@drawable/linea_ui" />

</androidx.constraintlayout.widget.ConstraintLayout>